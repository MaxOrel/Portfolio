.about {
  position: relative;
  height: 70vh;
  @include desktop {
    display: flex;
    align-items: center;
  }
  @include tablets{
    height: 71vh;
  }
  @include phones {
    height: initial;
  }
}

.about__columns {
  display: flex;
  padding: 120px 17% 265px;
  justify-content: space-between;
  @include desktop{
    margin-bottom: 6%;
    padding:0;
  }
  @include phones {
    flex-direction: column;
    padding-top: 44px;
    padding-bottom: 95px;
  }
}

.about__right {
  color: rgba($text-color, .5);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 56%;
  @include desktop{
    width: 58%;  
  }
  @include tablets{
    width: 53%;  
    font-size: 14px;
  }
  @include phones {
    width: 100%;
  }

}

.about__left {
  width: 36%;
  @include phones {
    width: 100%;
    margin-bottom: 40px;
  }
}

.about__desc {
  font-weight: 600;
  margin-bottom: 20px;
  @include phones {
    margin-bottom: 10px;
  }
}


.about__title {
  margin-bottom: 23px;
  @include phones {
    margin-bottom: 40px;
  }
}

.about__text-info{
  line-height: 30px;
  @include desktop {
    font-weight: 600;
  }
  @include tablets {
    line-height: 24px;
  }
  @include phones {
   margin-bottom: 48px;
  }
}

.about__ps {
  line-height: 30px;
  font-style: italic;
  margin-bottom: 20px;
  @include tablets {
    margin-bottom: 0;
  }
}