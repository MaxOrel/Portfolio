.user
    .user__avatar
        +image('content/user.jpg', 'user__avatar-pic')
    .user__about
        - 
            var userinfo = [
                ['Проживаю:', "Новосибирск"],
                ['Возраст:', "27 лет"],
                ['Родился:', "1 января 1991"],
            ];
        table.user__table
            each item in userinfo
                tr
                    td.user__table-title #{item[0]}
                    td.user__table-content #{item[1]}